{
    "name": "pusleapp",
    "version": "1.0.0",
    "description": "App backend",
    "main": "index.ts",
    "scripts": {
        "build": "yarn generate && tsc",
        "start": "yarn knex migrate:latest && node dist/src/index.js",
        "dev": "yarn knex migrate:latest && ts-node-dev --transpile-only --no-notify --exit-child src/index.ts",
        "generate": "ts-node --transpile-only src/schema.ts",
        "lint": "eslint src/**/*.ts",
        "format": "eslint src/**/*.ts --fix",
        "prepare": "husky install",
        "knex": "./node_modules/.bin/knex --knexfile src/db/knexfile.ts"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.{js,jsx,ts,tsx}": [
            "npx prettier --write",
            "npx eslint --fix"
        ]
    },
    "repository": "git@github.com:Scientia-Labs/pusleapp.git",
    "author": "Ayo <ayooluwaadedipe@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "@apollo/server": "^4.7.0",
        "@aws-sdk/client-s3": "^3.338.0",
        "@aws-sdk/s3-request-presigner": "^3.338.0",
        "bcryptjs": "^2.4.3",
        "date-fns": "^2.30.0",
        "dotenv": "^16.0.3",
        "graphql": "^16.6.0",
        "jsonwebtoken": "^9.0.0",
        "knex": "^2.4.2",
        "mysql": "^2.18.1",
        "nexus": "^1.3.0",
        "nodemailer": "^6.9.3"
    },
    "devDependencies": {
        "@flydotio/dockerfile": "^0.2.15",
        "@types/bcryptjs": "^2.4.2",
        "@types/date-fns": "^2.6.0",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/mysql": "^2.15.21",
        "@types/nodemailer": "^6.4.8",
        "@typescript-eslint/eslint-plugin": "^5.59.2",
        "@typescript-eslint/parser": "^5.59.2",
        "eslint": "^8.39.0",
        "husky": "^8.0.0",
        "lint-staged": "^13.2.2",
        "nodemon": "^2.0.22",
        "prettier": "^2.8.8",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.0.4"
    }
}
