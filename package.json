{
    "name": "pusleapp",
    "version": "1.0.0",
    "description": "App backend",
    "main": "index.ts",
    "scripts": {
    "migrate:deploy": "prisma migrate deploy",
    "start": "prisma generate && yarn generate && tsc && node dist/src/index.js",
        "dev": "ts-node-dev --transpile-only --no-notify --exit-child src/index.ts",
        "generate": "ts-node --transpile-only src/schema.ts",
        "lint": "eslint src/**/*.ts",
        "format": "eslint src/**/*.ts --fix",
        "prepare": "husky install"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.{js,jsx,ts,tsx}": [
            "npx prettier --write",
            "npx eslint --fix"
        ]
    },
    "repository": "git@github.com:Scientia-Labs/pusleapp.git",
    "author": "Ayo <ayooluwaadedipe@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "@apollo/server": "^4.7.0",
        "@prisma/client": "^4.13.0",
        "bcryptjs": "^2.4.3",
        "dotenv": "^16.0.3",
        "graphql": "^16.6.0",
        "jsonwebtoken": "^9.0.0",
        "mysql": "^2.18.1",
        "nexus": "^1.3.0",
        "prisma": "^4.13.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/mysql": "^2.15.21",
        "@typescript-eslint/eslint-plugin": "^5.59.2",
        "@typescript-eslint/parser": "^5.59.2",
        "eslint": "^8.39.0",
        "husky": "^8.0.0",
        "lint-staged": "^13.2.2",
        "nodemon": "^2.0.22",
        "prettier": "^2.8.8",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.0.4"
    }
}
